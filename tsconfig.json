{
    "compilerOptions": {
        "target": "es5",
        "lib": ["ESNext", "DOM"],
        "module": "esnext",
        "declaration": true, // Habilita la generaci√≥n de archivos .d.ts
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}

{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": false,
        "outDir": "./dist" // Los archivos compilados se colocar√°n en la carpeta dist
    },
    "include": [
        "src/**/*" // Todos los archivos dentro de la carpeta src
    ],
    "exclude": [
        "node_modules" // Excluir node_modules
    ]
}
